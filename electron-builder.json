{
  "appId": "com.herokuapp.tomatosplash",
  "productName": "Tomatosplash",
  "files": [
    "!**/*.ts",
    "!**/*.docx",
    "!src",
    "!.angular-cli.json",
    "!tsconfig.json",
    "!tslint.json",
    "!readme.md",
    "!karma.conf.js",
    "!postcss.config.js",
    "!protractor.conf.js"
  ],
  "directories": {
    "output": "app-builds"
  },
  "win": {
    "icon": "dist/favicon",
    "target": [
      "portable"
    ]
  },
  "mac": {
    "icon": "dist/favicon",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
